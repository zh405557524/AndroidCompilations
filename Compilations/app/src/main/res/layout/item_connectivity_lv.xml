<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_connectivity_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_connectivity_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_connectivity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算器"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="8dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_connectivity_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_connectivity_tcp_rcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接收的流量"/>
        <TextView
            android:layout_marginRight="8dip"

            android:id="@+id/tv_item_connectivity_tcp_snd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送的流量"/>
    </LinearLayout>


</LinearLayout>