<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    pressed 亮色，灰色
            selected 播放，暂停
            enable 直播，其他
    -->
    <item android:drawable="@drawable/stop_d" android:state_enabled="true" android:state_pressed="true"
          android:state_selected="true"/>
    <item android:drawable="@drawable/pause_d" android:state_enabled="false" android:state_pressed="true"
          android:state_selected="true"/>
    <item android:drawable="@drawable/play_d" android:state_enabled="true" android:state_pressed="true"
          android:state_selected="false"/>
    <item android:drawable="@drawable/play_d" android:state_enabled="false" android:state_pressed="true"
          android:state_selected="false"/>

    <item android:drawable="@drawable/stop_n" android:state_enabled="true" android:state_pressed="false"
          android:state_selected="true"/>
    <item android:drawable="@drawable/pause_n" android:state_enabled="false" android:state_pressed="false"
          android:state_selected="true"/>
    <item android:drawable="@drawable/play_n" android:state_enabled="true" android:state_pressed="false"
          android:state_selected="false"/>
    <item android:drawable="@drawable/play_n" android:state_enabled="false" android:state_pressed="false"
          android:state_selected="false"/>
</selector>