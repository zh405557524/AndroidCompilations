<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_root"
    android:background="@color/white1"
    tools:context="com.soul.androidcompilptions.rxandretrofi.ui.huai.video.VideoPlayActivity">


    <com.jungle.mediaplayer.widgets.JungleMediaPlayer
        android:id="@+id/media_player"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>


    <TextView
        android:id="@+id/tv_download"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x60"
        android:layout_alignParentRight="true"
        android:layout_below="@id/media_player"
        android:layout_marginRight="@dimen/x44"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/text_back_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/caching"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_download"
        android:layout_marginTop="@dimen/x20"/>

    <FrameLayout
        android:id="@+id/adjust_panel_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>
